<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Dashboard' %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body class="bg-light">
    <div class="content-wrapper">

        <nav class="navbar navbar-expand-lg navbar-light bg-light custom-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" href="/users/dashboard">ASLSTEAMHUB</a>
                <div class="collapse navbar-collapse d-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/users/logout">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container welcome-section">
            <h1>Welcome back, <%= userName || 'User' %></h1>
        </div>

        <div class="container dashboard-cards">
            <div class="row justify-content-center">
                <div class="col-md-3 mb-4">
                    <div class="card card-custom">
                        <i class="fas fa-book"></i>
                        <div class="card-body">
                            <h5><a href="#" class="text-dark">Database</a></h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card card-custom">
                        <i class="fas fa-list"></i>
                        <div class="card-body">
                            <h5><a href="/users/wordlist" class="text-dark">Personal Word List</a></h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card card-custom">
                        <i class="fas fa-cog"></i>
                        <div class="card-body">
                            <h5><a href="/users/settings" class="text-dark">User Settings</a></h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card card-custom">
                        <i class="fas fa-question-circle"></i>
                        <div class="card-body">
                            <h5><a href="/faq" class="text-dark">FAQ</a></h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-light py-5 mt-auto w-100 px-5">
        <div class="container-fluid">
            <div class="d-flex justify-content-center">
                <div class="row w-100 d-flex justify-content-around align-items-center">
                    <div class="col-md-2 text-left">
                        <img src="/qmw8U98.png" alt="Logo" class="footer-logo small-logo">
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-3 ml-5 mb-1 text-left">
                                <h5>Quick Links</h5>
                                <ul class="list-unstyled">
                                    <li><a href="#" class="text-light">Contact Us</a></li>
                                    <li><a href="/faq" class="text-light">About Us</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 text-left">
                        <h4 class="mb-0">&copy; 2023 ASLSTEAMHUB. All rights reserved.</h4>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
